# ==============================================
# GENERAL CONFIGURATION
# ==============================================
NODE_ENV=development
LOG_LEVEL=info

# ==============================================
# SERVICE PORTS
# ==============================================
PORT_API_GATEWAY=3000
PORT_AUTH_SERVICE=3001
PORT_DOCUMENT_SERVICE=3002
PORT_EMBEDDING_SERVICE=3003
PORT_QUERY_SERVICE=3004
PORT_NOTIFICATION_SERVICE=3005
PORT_ANALYTICS_SERVICE=3006
PORT_CHAT_SERVICE=3007
